#include <stdio.h>

void printBits(unsigned int num) {
    int bitCount = sizeof(num) * 8; // Total number of bits

    for (int i = bitCount - 1; i >= 0; i--) {
        int bit = (num >> i) & 1;
        printf("%d", bit);
    }
    printf("\n");
}

int main() {
    unsigned int num;

    printf("Enter a 32-bit integer: ");
    scanf("%u", &num);

    printf("Bits: ");
    printBits(num);

    return 0;
}
